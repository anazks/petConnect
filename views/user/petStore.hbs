    `;
    
    errorModal.appendChild(modalContent);
    document.body.appendChild(errorModal);
  }
  
  // Update error message
  document.getElementById('error-message').textContent = message;
  
  // Show the error modal
  errorModal.style.display = 'block';
}

// Close error modal
