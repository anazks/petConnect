<body>
  <div class="container">
    <h2>Newly Added Pets</h2>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Price</th>
          <th>Image</th>
          <th>Seller Name</th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}
        <tr>
          <td>{{productName}}</td>
          <td>{{description}}</td>
          <td>{{price}}</td>
          <td><img style="height: 50px; width: 50px" src="/images/product/{{_id}}.jpg" alt="Pet Image" /></td>
          <td>{{sellerName}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <section>
    <form action="/autoReminder" method="post">
      <input type="text" name="Name" placeholder="Enter Reminder Data" required>
      <input type="submit" value="Auto Reminder">
    </form>
  </section>
  <h2 class="pt-3" style="text-align: center;color:white">Newly Added Events</h2>
  <table class="table mt-4" style="color: white;width:80%;margin:auto">
    <thead>
      <tr>
        <th scope="col">Title</th>
        <th scope="col">Date Added</th>
        <th scope="col">Content</th>
        <th scope="col">Author</th>
        {{!-- <th scope="col">Action</th> --}}
      </tr>
    </thead>
    <tbody>
      {{#each medBlogs}}
      <tr>
        <th scope="row">{{title}}</th>
        <td>{{date}}</td>
        <td>{{content}}</td>
        <td>{{consultantName}}</td>
        {{!-- <td>
          <a class="btn btn-success" href="/approve-med-blog/{{_id}}">Approve</a>
          <a class="btn btn-danger" href="/reject-med-blog/{{_id}}">Reject</a>
        </td> --}}
      </tr>
      {{/each}}

    </tbody>
  </table>
  <div class="row">
  </div>
</div>
<br><br><br><br><br>
  <section id="contact">
    <h2>Health Reports</h2>
    <p>Upload your pet's health report easily</p>
    <form action="/add-healthReport" method="post" enctype="multipart/form-data">
      <input name="Name" type="text" placeholder="Pet Name" required />
      <input type="file" name="img" accept=".jpg,.jpeg,.png,.pdf" required />
      <input type="text" placeholder="Enter Details" name="data" required />
      <button type="submit">Upload Report</button>
    </form>
  </section>