      border: none;
      border-radius: 4px;
      cursor: pointer;
    }

    .btn-success {
      background-color: #28a745;
    }

    .btn-danger {
      background-color: #dc3545;
    }

    .btn:hover {
      opacity: 0.9;
    }

    section {
      margin-top: 50px;
      display: flex;
      justify-content: center;
    }

