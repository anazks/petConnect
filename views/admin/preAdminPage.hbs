<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin Dashboard with Charts</title>
  
  <!-- Script imports -->
  <script src="https://cdn.jsdelivr.net/npm/jquery/dist/jquery.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/datatables.net/js/jquery.dataTables.min.js"></script>
  
  <!-- jsPDF imports -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf-autotable/3.5.31/jspdf.plugin.autotable.min.js"></script>
  
  <!-- DataTables CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/datatables.net-dt/css/jquery.dataTables.min.css">
  
  <!-- Font Awesome for icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    
    body {
      display: flex;
      height: 100vh;
      background-color: #f8f9fa;
      color: #343a40;
    }
    
    .content {
      flex-grow: 1;
      padding: 30px;
      max-width: 1400px;
      margin: 0 auto;
    }
    
    .dashboard-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 30px;
      padding-bottom: 15px;
      border-bottom: 1px solid #dee2e6;
    }
    
    .dashboard-header h1 {
      font-size: 28px;
      color: #212529;
    }
    
    .stats-container {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 20px;
      margin-bottom: 30px;
    }
    
    .stat-card {
      background-color: white;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 4px 6px rgba(0,0,0,0.05);
      transition: transform 0.3s, box-shadow 0.3s;
    }
    
    .stat-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 6px 12px rgba(0,0,0,0.1);
    }
    
    .stat-card h3 {
      font-size: 16px;
      color: #6c757d;
      margin-bottom: 10px;
    }
    
    .stat-card p {
      font-size: 24px;
      font-weight: bold;
      color: #007bff;
    }
    
    .card {
      background-color: white;
      padding: 25px;
      border-radius: 10px;
      box-shadow: 0 4px 6px rgba(0,0,0,0.05);
      margin-bottom: 30px;
    }
    
    .card h3 {
      font-size: 18px;
      margin-bottom: 20px;
      color: #343a40;
      border-bottom: 2px solid #f8f9fa;
      padding-bottom: 10px;
    }
    
    table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 1.5rem;
    }
    
    th, td {
      border: 1px solid #e9ecef;
      padding: 12px 15px;
      text-align: left;
    }
    
    th {
      background-color: #4361ee;
      color: white;
      font-weight: 500;
    }
    
    tr:nth-child(even) {
      background-color: #f8f9fa;
    }
    
    tr:hover {
      background-color: #e9ecef;
    }
    
    .btn {
      background-color: #4361ee;
      color: white;
      border: none;
      padding: 12px 20px;
      cursor: pointer;
      border-radius: 5px;
      font-size: 16px;
      transition: background-color 0.3s;
      display: inline-flex;
      align-items: center;
      gap: 8px;
    }
    
    .btn:hover {
      background-color: #3a56d4;
    }
    
    .btn-success {
      background-color: #38b000;
    }
    
    .btn-success:hover {
      background-color: #2d9200;
    }
    
    .btn-container {
      display: flex;
      gap: 15px;
      margin-top: 20px;
    }
    
    /* Custom DataTables styling */
    .dataTables_wrapper .dataTables_filter input {
      padding: 8px;
      border: 1px solid #ced4da;
      border-radius: 4px;
    }
    
    .dataTables_wrapper .dataTables_length select {
      padding: 6px;
      border: 1px solid #ced4da;
      border-radius: 4px;
    }
    
    .dataTables_wrapper .dataTables_paginate .paginate_button {
      border-radius: 4px;
    }
    
    .dataTables_wrapper .dataTables_paginate .paginate_button.current {
      background: #4361ee;
      color: white !important;
      border: 1px solid #4361ee;
    }
    
    .status-completed {
      background-color: #d4edda;
      color: #155724;
      padding: 4px 8px;
      border-radius: 4px;
      font-weight: 500;
    }
    
    .status-pending {
      background-color: #fff3cd;
      color: #856404;
      padding: 4px 8px;
      border-radius: 4px;
      font-weight: 500;
    }
  </style>
</head>
<body>
  <div class="content">
    <div class="dashboard-header">
      <h1><i class="fas fa-tachometer-alt"></i> Admin Dashboard</h1>
      <p>Welcome back, Admin</p>
      <a href="/logout" class="btn btn-danger">logout</a>
    </div>
    
    <div class="stats-container">
      <div class="stat-card">
        <h3>Total Pets</h3>
        <p>{{countProducts}}</p>
      </div>
      <div class="stat-card">
        <h3>Total Users</h3>
        <p>{{coutUsers}}</p>
      </div>
      <div class="stat-card">
        <h3>Pet Cares</h3>
        <p>{{countSellers}}</p>
      </div>
      
    </div>
    
    <div class="card">
            <a href="http://localhost:5000/admin/resources/newsModel" class="btn btn-success">Update data</a>
      <h3>User Data</h3>
      <table id="companyTable">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            
            
          </tr>
        </thead>
        <tbody>
          {{#each users}}
          <tr>
            <td>{{this.userName}}</td>
            <td>{{this.email}}</td>
            <td>{{this.mobile}}</td>
            {{!-- <td>{{#if this.completed}}<span class="status-completed">Completed</span>{{else}}<span class="status-pending">Pending</span>{{/if}}</td> --}}
          </tr>
          {{/each}}
        </tbody>
      </table>
      <button class="btn" onclick="downloadCompanyReport()">
        <i class="fas fa-file-pdf"></i> Download Company Report
      </button>
    </div>
    
    <div class="card">
      <h3>Seller Data</h3>
      <table id="userTable">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Address</th>
          </tr>
        </thead>
        <tbody>
          {{#each sellers}}
          <tr>
            <td>{{this.userName}}</td>
            <td>{{this.email}}</td>
            <td>{{this.mobile}}</td>
            <td>{{this.place}}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>


      <table id="userTable">
        <h3>Volunteers Data</h3>
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Address</th>
          </tr>
        </thead>
        <tbody>
          {{#each consultants}}
          <tr>
            <td>{{this.userName}}</td>
            <td>{{this.email}}</td>
            <td>{{this.mobile}}</td>
            <td>{{this.place}}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>

      <table id="userTable">
        <h3>Volunteers Data</h3>
        <thead>
          <tr>
            <th>Name</th>
            <th>Price</th>
            <th>description</th>
            <th>sellerName</th>
          </tr>
        </thead>
        <tbody>
          {{#each products}}
          <tr>
            <td>{{this.productName}}</td>
            <td>{{this.mrp}}</td>
            <td>{{this.description}}</td>
            <td>{{this.sellerName}}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
      <button class="btn" onclick="downloadUserReport()">
        <i class="fas fa-file-pdf"></i> Download User Report
      </button>
    </div>
    
    <div class="btn-container">
      <button class="btn btn-success" onclick="downloadAllReports()">
        <i class="fas fa-download"></i> Download All Reports
      </button>
    </div>
  </div>
  
  <script>
    // Initialize DataTables when document is ready
    $(document).ready(function() {
      $('#companyTable').DataTable({
        responsive: true,
        dom: 'Bfrtip',
        "pageLength": 10,
        "order": [[0, "asc"]]
      });
      
      $('#userTable').DataTable({
        responsive: true,
        dom: 'Bfrtip',
        "pageLength": 10,
        "order": [[0, "asc"]]
      });
    });
    
    // PDF download functions
    function downloadCompanyReport() {
      // Get jsPDF from window object
      const { jsPDF } = window.jspdf;
      
      // Create new document
      const doc = new jsPDF();
      
      // Add title and date
      doc.setFontSize(18);
      doc.text('Company Report', 14, 15);
      
      doc.setFontSize(10);
      doc.text('Generated on: ' + new Date().toLocaleDateString(), 14, 22);
      
      // Use autoTable plugin
      doc.autoTable({
        html: '#companyTable',
        startY: 30,
        styles: { fontSize: 8, cellPadding: 2 },
        headStyles: { fillColor: [67, 97, 238] },
        alternateRowStyles: { fillColor: [240, 240, 240] },
      });
      
      // Add page number
      const pageCount = doc.internal.getNumberOfPages();
      for(let i = 1; i <= pageCount; i++) {
        doc.setPage(i);
        doc.setFontSize(8);
        doc.text('Page ' + i + ' of ' + pageCount, doc.internal.pageSize.width - 30, doc.internal.pageSize.height - 10);
      }
      
      // Save the PDF
      doc.save('Company_Report.pdf');
    }
    
    function downloadUserReport() {
      // Get jsPDF from window object
      const { jsPDF } = window.jspdf;
      
      // Create new document
      const doc = new jsPDF();
      
      // Add title and date
      doc.setFontSize(18);
      doc.text('User Report', 14, 15);
      
      doc.setFontSize(10);
      doc.text('Generated on: ' + new Date().toLocaleDateString(), 14, 22);
      
      // Use autoTable plugin
      doc.autoTable({
        html: '#userTable',
        startY: 30,
        styles: { fontSize: 8, cellPadding: 2 },
        headStyles: { fillColor: [67, 97, 238] },
        alternateRowStyles: { fillColor: [240, 240, 240] },
      });
      
      // Add page number
      const pageCount = doc.internal.getNumberOfPages();
      for(let i = 1; i <= pageCount; i++) {
        doc.setPage(i);
        doc.setFontSize(8);
        doc.text('Page ' + i + ' of ' + pageCount, doc.internal.pageSize.width - 30, doc.internal.pageSize.height - 10);
      }
      
      // Save the PDF
      doc.save('User_Report.pdf');
    }
    
    function downloadAllReports() {
      // First download the company report
      downloadCompanyReport();
      
      // Then download the user report with a small delay to avoid browser issues
      setTimeout(function() {
        downloadUserReport();
      }, 500);
    }
  </script>
</body>
</html>